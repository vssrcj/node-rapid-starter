{
  "moduleFileExtensions": [ "ts", "js", "json" ],
  "preset": "ts-jest",
  "testEnvironment": "node",
  "verbose": true,
  "rootDir": "./src",
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "testMatch": [
    "**/__tests__/*.ts"
  ],
  "collectCoverageFrom": [ "src" ]
}
