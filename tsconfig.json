{
  "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "module": "commonjs",
      "allowJs": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "declaration": false,
      "removeComments": true,
      "resolveJsonModule": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "strict": false,
      "outDir": "build",
      "lib": ["es6", "es7", "dom"],
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["build", "node_modules"]
}